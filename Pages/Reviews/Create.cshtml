@page
@model GlamCart.Pages.Reviews.CreateModel

@{
    ViewData["Title"] = "Add Review";
}

<h1 class="my-4 text-center">Add Review</h1>

<form method="post" class="w-50 mx-auto">

    <div class="form-group mb-3">
        <label>Product</label>
        <select asp-for="Review.ProductID" class="form-control" asp-items="Model.ProductList"></select>
    </div>

    <div class="form-group mb-3">
        <label>Score (1â€“5)</label>
        <input asp-for="Review.Rating" class="form-control" min="1" max="5" />
    </div>

    <div class="form-group mb-3">
        <label>Comment</label>
        <textarea asp-for="Review.Comment" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Review</button>
    <a asp-page="/Products/Index" class="btn btn-secondary ms-2">Back</a>

</form>
